{
    "manifest_version": 2,
    "name": "CleanMe",
    "version": "1.0.0",
    "default_locale": "en",
    "description": "Extension that cleans all your browser history.",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "browser_action": {
        "default_title": "__MSG_main_icon_title__"
    },
    "author": "aakimov",
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "permissions": [
        "tabs",
        "browsingData"
    ]
}
